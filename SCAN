#include <stdio.h>
#include <stdlib.h>

// Function to sort the array of requests
void sort(int arr[], int n) {
    int temp;
    for (int i = 0; i < n-1; i++) {
        for (int j = i+1; j < n; j++) {
            if (arr[i] > arr[j]) {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

// Function to implement SCAN Disk Scheduling algorithm
void scan(int arr[], int size, int head, int disk_size) {
    int distance = 0, cur_track;
    int left[size], right[size];
    int left_count = 0, right_count = 0;

    // Dividing the requests into left and right of the head
    for (int i = 0; i < size; i++) {
        if (arr[i] < head) {
            left[left_count++] = arr[i];
        } else {
            right[right_count++] = arr[i];
        }
    }

    // Sorting the left and right request arrays
    sort(left, left_count);
    sort(right, right_count);

    // Calculate the distance traveled by the disk head to the farthest right request
    for (int i = 0; i < right_count; i++) {
        cur_track = right[i];
        distance += abs(cur_track - head);
        head = cur_track;
    }

    // After reaching the rightmost request, the head goes to the farthest left request
    head = left[left_count - 1];
    
    // Calculate the distance traveled to the farthest left request
    for (int i = left_count - 2; i >= 0; i--) {
        cur_track = left[i];
        distance += abs(cur_track - head);
        head = cur_track;
    }

    printf("Total distance traveled by the disk: %d\n", distance);
}

// Main function to demonstrate SCAN Disk Scheduling
int main() {
    int arr[] = {98, 183, 37, 122, 14, 124, 65, 67};
    int size = sizeof(arr) / sizeof(arr[0]);
    int head = 50;  // Initial head position
    int disk_size = 200;  // Total number of tracks in the disk

    printf("Initial disk head position: %d\n", head);
    printf("Disk requests: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    // Perform SCAN Disk Scheduling
    scan(arr, size, head, disk_size);

    return 0;
}
